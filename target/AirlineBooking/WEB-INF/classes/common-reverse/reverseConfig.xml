<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="testTables" targetRuntime="MyBatis3">
        <!-- 批注生成器 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- jdbc连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql:///db_plane" userId="root" password="123456">
        </jdbcConnection>

        <!-- java类型解析器 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="ssm.pojo" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="ssm.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="ssm.mapper" type="XMLMAPPER" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table tableName="flightinfor" schema=""></table>
        <table tableName="orderinfor" schema=""></table>
        <table tableName="seatinfor" schema=""></table>
        <table tableName="userinfor" schema=""></table>


    </context>
</generatorConfiguration>

